html
	head
		title User Registration
		script(src= 'https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
		script(src= 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
		link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
		style('text/css').
			input{
				margin: 5px;
				min-width:55%;
				border-radius: 5px;
				}
			label{
				min-width: 10%;
			}
			button{
				margin-left: 58%;
			}
			body{
				margin:  3%;
				background-color: lightgrey;
				background-repeat: no-repeat;
				background-size: 100% 93%;
				background-image: url("https://d27yqot8savz5t.cloudfront.net/screengrabs/images/000/003/802/medium.jpg");
			}
			h1, h3{
				margin-left: 15%;
				color: darkGreen;
			}
			#login{
				margin-left: 90%;
			}
	body.container-fluid
		div.row
			form#login(action='/login' method='get')
					button(type='submit') Login
			h1 Welcome to #{name}'s Blog
			h3.text-warning #{Message}
		div.col-md-2
		div.registration.col-md-8
			form(action='/user/store' method='post')
				div
					label Name: 
					input( name='name' placeHolder='Enter your Name')
				div
					label email: 
					input( name='email' placeHolder='Enter your Mail' pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$")
				div
					label Password: 
					input( type='password' name='password' placeHolder='Enter your Password' pattern="(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters")
				div
					label Phone# : 
					input( name='phoneNumber' placeHolder='Enter your Phone Number' pattern='[0-9].{9,}' title='10 digits Phone Number')
				div
					button(type='submit') Sign Up